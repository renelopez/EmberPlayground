<div class="row">
    <div class="col-md-7">
        <h2>{{title}}</h2>

        <p class="text-success">{{description}}</p>

        <h3 class="text-muted">${{price}}</h3>
    </div>
    <div class="col-md-5">
        <img {{bind-attr src='image'}} class="img-thumbnail img-rounded"/>
    </div>
    <h3>Reviews</h3>
    <ul>
        {{#each reviews}}
            <li>{{text}}</li>
          {{else}}
          <li><p class="text-muted">
              <em>No reviews yet.Be the first to write one!</em>
          </p></li>
          {{/each}}
    </ul>
</div>



