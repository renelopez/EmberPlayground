    <div class="col-md-7">
        <h2>{{model.title}}</h2>

        <p class="text-success">{{model.description}}</p>

        <h3 class="text-muted">${{model.price}}</h3>
    </div>
    <div class="col-md-5">
        <img {{bind-attr src='model.image'}} class="img-thumbnail img-rounded"/>
    </div>
    {{render 'reviews' model.reviews}}
    <div class="new-review">
        <h3>Review {{model.title}}</h3>
      {{#if text}}
          <p class="text-muted">{{text}}</p>
      {{/if}}
      {{textarea valueBinding='text'}}
        <button {{action 'createReview'}} class="btn-primary">Review</button>
    </div>




